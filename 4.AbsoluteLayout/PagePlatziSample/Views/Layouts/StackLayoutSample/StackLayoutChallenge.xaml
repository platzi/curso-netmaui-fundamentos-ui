<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagePlatziSample.Views.Layouts.StackLayoutSample.StackLayoutChallenge"
             Title="StackLayoutChallenge">
    <VerticalStackLayout VerticalOptions="Center">
        <Frame Margin="20" CornerRadius="20" HeightRequest="320">
           <VerticalStackLayout> 
                <!--Imagen de perfil-->
                <Frame CornerRadius="15" IsClippedToBounds="True" Padding="0" HasShadow="False" HeightRequest="120" WidthRequest="120" HorizontalOptions="Start">
                      <Image Source="marie" Aspect="AspectFit"/>
                </Frame>
                 <!--Detalle de perfil-->
                <Label Text="Jordan Amblin" FontAttributes="Bold" FontSize="22" Padding="0,20,0,0"/>
                <Label Text="he/him" TextColor="#7b7b7b" FontSize="20"/>
                <Label Text="Hey 👋! I'm Product Designer on the Meeting Experience team." FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Start" Padding="0,20"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
